                <span>
                    <strong>RoomNumber:</strong>	@item.Room_Number
                </span>
                <br />
                <span><strong>Expiry_Date:</strong>@item.Expiry_Date</span>
            </div>
    <center>
        <a class="btn btn-danger btn-sm text-white" asp-route-Id="@item.Reservatation_Number" asp-action="MyReversaion_Delete" asp-controller="Opration">Delete</a>
        <a class="btn btn-warning btn-sm text-white" asp-route-Id="@item.Reservatation_Number" asp-action="MyReversaion_Update" asp-controller="Opration">Update</a>
    </center>
        </div>
    }

</div>