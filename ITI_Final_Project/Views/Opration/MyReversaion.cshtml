
@{
    ViewBag.title = "MyReversaion";
}

<h1 class="badge badge-primary p-4"style="font-size:25px" >MyReversaion</h1>





@model List<Revevarstion>

<div class="container">

    @if (!Model.Any())
	{
        <div class="m-4 " style="margin:20px auto">
		 <a class="alert alert-info text-black fs-5 w-100"style="font-size:20px;width:400px">No Data Here</a>

        </div>
	}


    @foreach (var item in Model)
    {<div class="card m-2">
            <div class="card-body">


                <h2><strong>Name:</strong>@item.Customer.Name</h2>
