
@{
    ViewBag.title = "Index";
}
@model List<Customer>
<h1 class="ml-4 badge badge-info p-4 badge-pill " style="font-size:20px">Users</h1>
 
<table class="table table-striped table-hover table-responsive m-3 border-2" >
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Nationality
            </th>
            <th>
                Phone_Number
            </th>
            <th>
                Notional_Number
            </th>
            <th>
                Email
            </th>
            <th>
                IsAdmin
            </th>  
            <th>
                IsUser
            </th>
            <th>
                Opration
            </th>
        </tr>
    </thead>
    <tbody>
        
            @foreach (var item in Model)
            {

        <tr>
            <td>
                @item.Name
            </td>

            <td>
            @item.National.Name
        </td>

            <td>
                @item.Phone_Number
            </td>

            <td>
                @item.Notional_Number
            </td>


            <td>
                @item.Email
            </td> 
            <td>
                @item.IsAdmin
             

            </td> 
            <td>
                @(item.IsUser==null? "-":"True")
            </td>
            <td>
          <a class="btn btn-sm btn-danger text-white" style="font-size:15px">Delete</a>
          <a class="btn btn-sm btn-info text-white" style="font-size:15px">Update</a>
            </td>
        </tr>

            }
        
    </tbody>
</table>

