@{
    ViewBag.title = "Profile";
    Layout = "/Views/Shared/_Layout.cshtml";
}
@model Customer
<div class="col text-center">
    <div class="m-auto" style="margin:20px auto">
        <h2>Welcome @Model.Name</h2>

    </div>
</div>

<div class="row justify-content-between col-md-6">

    <div class="col-md-8">
        <div class="col">

            <label><strong>Name: </strong>@Model.Name</label>
        </div>
        <div class="col">

            <label><strong>Email: </strong>@Model.Email</label>
        </div>
        <div class="col">

            <label><strong>National: </strong>@Model.National.Name</label>
        </div>

    </div>
    <div class="col-md-4">
        <img src="~/Imgs/@Model.Img" style="border-radius:10px"/>

    </div>
    <div class="m-4">
        <a class="btn btn-primary text-white fs-4 ">Update Profile</a>
    </div>
</div>


