
@{
    ViewData["Title"] = "Delete";
}
@model Cleaner
<h1>Delete @Model.Name</h1>

<div class="row justify-content-between">


    <div class=" col-8">

        <form class="col-12 m-4 p-5" method="post" asp-action="Delete" asp-controller="Admin" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger" style="font-weight:bolder"></div>

            <input  type="hidden" asp-for="Id" />

            <div class="col-6 p-4">
                <label asp-for="Name">Name</label>
                <input type="text" asp-for="Name" placeholder="Name" class="form-control" readonly>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-6 p-4">
                <label asp-for="Phone_Number">Phone Number</label>
                <input type="text" asp-for="Phone_Number" placeholder="Phone Number" class="form-control" readonly>
                <span asp-validation-for="Phone_Number" class="text-danger"></span>
            </div>

            <div class="col-6 p-4">
                <label asp-for="Address">Address</label>
                <input type="text" asp-for="Address" placeholder="National Number" class="form-control" readonly>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>


            <div class="col-6 p-4">
                <label asp-for="Salary">Salary</label>
                <input type="text" asp-for="Salary" placeholder="Email" class="form-control" readonly>
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>

            <div class="col-6 p-4">
                <input type="submit" class="btn btn-danger" value="Delete" />
                <a asp-action="Index" asp-controller="Admin" class="btn btn-primary">Return</a>
            </div>
        </form>
    </div>

</div>
